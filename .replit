run = "uvicorn main:app --host 0.0.0.0 --port 3000"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python3 -m uvicorn main:app --host 0.0.0.0 --port 3000"]
build = ["sh", "-c", "upm install"]

[workflows]
runButton = "Python FastAPI"

[[workflows.workflow]]
name = "Python FastAPI"
author = 40070281
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m uvicorn main:app --host 0.0.0.0 --port 3000"

[[ports]]
localPort = 3000
externalPort = 80
